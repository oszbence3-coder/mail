        </div>
      </div>

      <% if (message.attachments && message.attachments.length > 0) { %>
      <div class="mt-4">
        <div class="font-semibold text-gray-400 mb-2">
          <i class="fas fa-paperclip mr-2"></i>Csatolmányok (<%= message.attachments.length %>):
        </div>
        <div class="flex flex-wrap gap-2">
          <% message.attachments.forEach((att, i) => { %>
            <div class="bg-white/5 px-4 py-2 rounded-lg border border-white/10 flex flex-col items-start max-w-xs">
              <i class="fas fa-file mr-2"></i>
              <span class="font-bold"><%= att.filename %></span>
              <span class="text-xs text-gray-400">(<%= (att.size / 1024).toFixed(1) %> KB)</span>
              <a href="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>" class="text-blue-400 hover:underline mt-1 font-semibold" download>
                <i class="fas fa-download mr-1"></i>Letöltés
              </a>
              <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                <img src="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>" alt="<%= att.filename %>" class="mt-2 rounded shadow max-h-60 cursor-pointer hover:scale-105 transition" onclick="window.open(this.src)">
              <% } else if (att.contentType && att.contentType.startsWith('video/')) { %>
                <video controls class="mt-2 rounded shadow max-w-full max-h-60">
                  <source src="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>" type="<%= att.contentType %>">
                  Videó nem támogatott a böngésződben.
                </video>
              <% } else if (att.contentType && att.contentType.startsWith('audio/')) { %>
                <audio controls class="mt-2 w-full max-w-md">
                  <source src="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>" type="<%= att.contentType %>">
                  Hang nem támogatott a böngésződben.
                </audio>
              <% } else if (att.contentType && (att.contentType.includes('pdf') || att.filename.endsWith('.pdf'))) { %>
                <div class="mt-2 bg-gray-100 rounded shadow p-2 w-full">
                  <div class="flex items-center justify-between mb-2 px-2">
                    <span class="text-sm font-semibold text-gray-700"><i class="fas fa-file-pdf text-red-500 mr-1"></i>PDF előnézet</span>
                    <a href="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm">
                      <i class="fas fa-external-link-alt mr-1"></i>Új ablakban megnyitás
                    </a>
                  </div>
                  <iframe src="/attachment/<%= message.uid %>/<%= i %>?folder=<%= folder %>#view=FitH" class="w-full h-[600px] rounded border-2 border-gray-300" style="min-height: 400px;"></iframe>
                </div>
              <% } else if (att.filename.match(/\.(docx|doc)$/i)) { %>
                <div class="mt-2 bg-blue-50 border border-blue-200 rounded p-4 flex items-center gap-3">
                  <i class="fas fa-file-word text-blue-600 text-3xl"></i>
                  <div>
                    <p class="font-semibold text-blue-900">Word Dokumentum</p>
