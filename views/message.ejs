                <div class="mt-2 bg-green-50 border border-green-200 rounded p-4 flex items-center gap-3">
                  <i class="fas fa-file-excel text-green-600 text-3xl"></i>
                  <div>
                    <p class="font-semibold text-green-900">Excel Táblázat</p>
                    <p class="text-sm text-green-700">Töltsd le a táblázatot a megnyitáshoz</p>
                  </div>
                </div>
              <% } else if (att.filename.match(/\.(pptx|ppt)$/i)) { %>
                <div class="mt-2 bg-orange-50 border border-orange-200 rounded p-4 flex items-center gap-3">
                  <i class="fas fa-file-powerpoint text-orange-600 text-3xl"></i>
                  <div>
                    <p class="font-semibold text-orange-900">PowerPoint Bemutató</p>
                    <p class="text-sm text-orange-700">Töltsd le a bemutatót a megnyitáshoz</p>
                  </div>
                </div>
              <% } %>
            </div>
          <% }); %>
        </div>
      </div>
      <% } %>
    </div>

